<div class="productsList">
    {{#if products.length}}
    {{#each this.products as |product|}}
    <div class="productItem">
        <img src="{{product.imageUrl}}" class="imageUrl">
        <div class="name">{{product.name}}</div>
        <div class="price">Price: {{product.price}}</div>
        <div class="description">{{product.description}}</div>

        <button type="button" class="btn btn-outline-danger mybtn" productId="{{product._id}}"
            imageUrl="{{product.imageUrl}}">Delete Item</button>

        {{!-- <button></button> --}}
        <button type="button" class="btn btn-outline-warning"><a class="updateLink"
                href='/admin/update-product?productId={{product._id}}'>Update Item</a></button>

    </div>
    {{/each}}
    {{else}}
    <img class="elseimsg" src="https://img.freepik.com/premium-vector/shopping-cart-with-cross-mark-wireless-paymant-icon-shopping-bag-failure-paymant-sign-online-shopping-vector_662353-912.jpg"
        alt="cartEmpty">
    {{/if}}

</div>